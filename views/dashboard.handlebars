<div class="content">
  <h2>Welcome, {{name}}!</h2>

  <section class="card">
      <header><h1>Create a New Post:</h1></header>

        <form class="form new-post-form">
                  <label for="post-title">Post title:</label>
        <div>
          <input
            class="form-input"
            type="text"
            id="post-title"
            name="post-title"
          />
        </div>          
        <label for="post-cont">Content:</label>
        <div class="form-group">
          <textarea
            class="form-input"
            id="post-cont"
            name="post-cont"
          ></textarea>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Create Post</button>
        </div>
      </form>
  </section>

    {{!-- {{#if posts.length}} --}}
      <div class="posts-list" id="posts-list">
        <h3>Current Posts:</h3>

        {{#each userPosts as |post| }}
          
          <div class="card post-info" data-id="{{id}}">
          <h3><a class="link" href="/post/{{id}}">{{title}}</a></h3>
          <p>posted by: {{user.name}} on: {{format_time createdAt}}</p>
          </div>

          <div>
            <div>
              <h4><a href="/post/{{id}}">{{post.name}}</a></h4>
            </div>
            <div class="col-md-4">
              <button
                class="btn btn-sm btn-danger"
                data-id="{{post.id}}"
              >DELETE</button>
            </div>
          </div>

        {{/each}}


      </div>
    {{!-- {{/if}} --}}
  </div>
</div>

<script src="./js/profile.js"></script>