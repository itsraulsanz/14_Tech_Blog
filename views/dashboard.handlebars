<div class="content">
  <h2>Welcome, {{name}}!</h2>

  <section class="card">
      <header><h1>Create a New Post:</h1></header>

        <form class="form new-post-form">
                  <label for="post-title">Post title:</label>
        <div>
          <input
            class="form-input"
            type="text"
            id="post-title"
            name="post-title"
          />
        </div>          
        <label for="post-cont">Content:</label>
        <div class="form-group">
          <textarea
            class="form-input"
            id="post-cont"
            name="post-cont"
          ></textarea>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Create Post</button>
        </div>
      </form>
  </section>

      {{#if posts}}
        <div class="posts-list">
          <h3>Current Posts:</h3>
      {{/if}}
      
      {{#each posts as |post|}}
            <section class="card">
              <input type="hidden" name="post-id" value="{{post.id}}"
              <a href="/post/{{id}}">
              <header><h1>{{title}}</h1><h5>{{date_created}}</h5></header>
              <p>{{content}}</p>
              </a>              
              <div>
                <button class="button btn-update" id="btn-update" value="{{post.id}}">UPDATE</button>
                <button class="button btn-delete" id="btn-delete" value="{{post.id}}">DELETE</button>
              </div>
            </section>
          {{/each}}
        </div>


  </div>
</div>

<script src="./js/profile.js"></script>